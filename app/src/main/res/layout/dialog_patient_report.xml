<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="?attr/colorSurface">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/editTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Digite o título do laudo"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/textColorSecondary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conteúdo"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        android:layout_marginTop="12dp"/>
    <EditText
        android:id="@+id/editConteudo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:hint="Digite o conteúdo do laudo"
        android:textColor="?attr/colorOnSurface"
        android:textColorHint="?attr/textColorSecondary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">
        <TextView
            android:id="@+id/textAnexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenhum anexo"
            android:textColor="?attr/textColorSecondary"
            android:layout_gravity="center_vertical"/>
        <Button
            android:id="@+id/btnSelecionarAnexo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecionar Anexo"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"/>
        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:layout_marginStart="12dp"/>
    </LinearLayout>
</LinearLayout> 