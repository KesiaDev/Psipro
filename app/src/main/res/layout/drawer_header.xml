<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="bottom">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_photo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_account_circle"
        app:civ_border_color="@color/bronze_gold"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/nav_header_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Seu Nome aqui"
        android:textColor="@color/bronze_gold"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/nav_header_crp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CRP nÃ£o informado"
        android:textColor="@color/bronze_gold"
        android:textSize="14sp" />
</LinearLayout> 