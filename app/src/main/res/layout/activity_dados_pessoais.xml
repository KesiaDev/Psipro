<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorBackground"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Cabeçalho -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Voltar"
                android:src="@drawable/ic_arrow_back"
                app:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Dados do Paciente"
                android:textColor="?attr/colorPrimary"
                android:textSize="17sp"
                android:textStyle="normal" />
        </LinearLayout>

        <!-- Seção: Informações -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_person"
                app:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="  Informações"
                android:textColor="?attr/colorPrimary"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <Spinner
            android:id="@+id/spinnerGrupo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorSurface"
            android:padding="8dp"
            android:popupBackground="?attr/colorBackground"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorSurface"
            android:fontFamily="sans-serif"
            android:hint="Nome"
            android:padding="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/textColorSecondary"
            android:textSize="14sp" />

        <!-- WhatsApp com bandeira -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="Brasil"
                android:src="@drawable/ic_brazil_flag" />

            <EditText
                android:id="@+id/edtTelefone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/colorSurface"
                android:fontFamily="sans-serif"
                android:hint="WhatsApp"
                android:inputType="phone"
                android:padding="8dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/textColorSecondary"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtLinkVideo"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorSurface"
            android:fontFamily="sans-serif"
            android:hint="Link de video chamada"
            android:inputType="textUri"
            android:padding="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/textColorSecondary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorSurface"
            android:fontFamily="sans-serif"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/textColorSecondary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtCpf"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorSurface"
            android:fontFamily="sans-serif"
            android:hint="CPF"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/textColorSecondary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtRg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorSurface"
            android:fontFamily="sans-serif"
            android:hint="RG"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/textColorSecondary"
            android:textSize="14sp" />

        <!-- Seção: Endereço -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_location"
                app:tint="?attr/colorPrimary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="  Endereço"
                android:textColor="?attr/colorPrimary"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtCep"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorSurface"
            android:fontFamily="sans-serif"
            android:hint="CEP"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/textColorSecondary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtEndereco"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorSurface"
            android:fontFamily="sans-serif"
            android:hint="Endereço"
            android:padding="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/textColorSecondary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtNumero"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorSurface"
            android:fontFamily="sans-serif"
            android:hint="Número"
            android:padding="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/textColorSecondary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edtBairro"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:background="?attr/colorSurface"
            android:fontFamily="sans-serif"
            android:hint="Bairro"
            android:padding="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/textColorSecondary"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtCidade"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="?attr/colorSurface"
                android:fontFamily="sans-serif"
                android:hint="Cidade"
                android:padding="8dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/textColorSecondary"
                android:textSize="14sp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edtEstado"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="?attr/colorSurface"
                android:fontFamily="sans-serif"
                android:hint="Estado"
                android:padding="8dp"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/textColorSecondary"
                android:textSize="14sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtComplemento"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Complemento"
            android:textColor="?attr/colorOnSurface"
            android:textColorHint="?attr/textColorSecondary"
            android:background="?attr/colorSurface"
            android:padding="8dp"
            android:layout_marginTop="6dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

        <!-- Seção: Financeiro -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_account_balance_wallet"
                app:tint="?attr/colorPrimary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Financeiro"
                android:textColor="?attr/colorPrimary"
                android:textSize="13sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">
            <EditText
                android:id="@+id/edtValorSessao"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Valor por sessão"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/textColorSecondary"
                android:background="?attr/colorSurface"
                android:padding="8dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:inputType="numberDecimal" />
            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edtDiaCobranca"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Dia de Cobrança"
                android:textColor="?attr/colorOnSurface"
                android:textColorHint="?attr/textColorSecondary"
                android:background="?attr/colorSurface"
                android:padding="8dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:inputType="number" />
        </LinearLayout>
        <Switch
            android:id="@+id/switchLembreteCobranca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar lembrete mensal de cobrança"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/txtAtencaoCobranca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atenção: Cobrança automática ativada. Mantenha os registros financeiros do seu paciente atualizados."
            android:textColor="?attr/colorSecondary"
            android:background="#22B08D57"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:visibility="gone" />

        <!-- Botão Salvar -->
        <Button
            android:id="@+id/btnSalvarDados"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Salvar"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            android:textStyle="normal"
            android:textSize="14sp"
            android:backgroundTint="?attr/colorPrimary"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/rounded_button_bronze" />

    </LinearLayout>
</ScrollView> 