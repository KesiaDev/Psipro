<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:minHeight="400dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Cabeçalho com foto, nome e CRP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cardProfileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_profile_placeholder"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seu Nome"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="?attr/colorPrimary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/cardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título Profissional"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/cardCrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRP 00000000"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Especialidades -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_badge"
                app:tint="?attr/colorPrimary"
                android:layout_marginEnd="8dp" />
            
            <TextView
                android:id="@+id/cardSpecialties"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Especialidades"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Sobre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_info"
                app:tint="?attr/colorPrimary"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="2dp" />
            
            <TextView
                android:id="@+id/cardAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sobre o Psicólogo"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end" />
        </LinearLayout>

        <!-- Modalidades -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_schedule"
                app:tint="?attr/colorPrimary"
                android:layout_marginEnd="8dp" />
            
            <TextView
                android:id="@+id/cardModalities"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modalidades"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Contatos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_whatsapp"
                app:tint="?attr/colorPrimary"
                android:layout_marginEnd="8dp" />
            
            <TextView
                android:id="@+id/cardWhatsapp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="(00) 00000-0000"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_email"
                app:tint="?attr/colorPrimary"
                android:layout_marginEnd="8dp" />
            
            <TextView
                android:id="@+id/cardEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="email@exemplo.com"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Endereço -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_location_on"
                app:tint="?attr/colorPrimary"
                android:layout_marginEnd="8dp" />
            
            <TextView
                android:id="@+id/cardAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Endereço"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Site -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_language"
                app:tint="?attr/colorPrimary"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/cardSite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Site"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView> 