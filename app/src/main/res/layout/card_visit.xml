<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Lado esquerdo: Foto e nome -->
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cardProfileImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_profile_placeholder"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/cardName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seu Nome"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/bronze_gold"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/cardCrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CRP 00000000"
                android:textColor="@color/bronze_gold"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Lado direito: Dados completos -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:gravity="top">

            <TextView
                android:id="@+id/cardSpecialties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Especialidades"
                android:textColor="@color/bronze_gold"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/cardAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sobre o Psicólogo"
                android:textColor="@color/bronze_gold"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/cardModalities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modalidades"
                android:textColor="@color/bronze_gold"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/cardSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horários"
                android:textColor="@color/bronze_gold"
                android:textSize="14sp"
                android:layout_marginTop="2dp" />

            <!-- Contatos -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_whatsapp"
                    android:tint="@color/bronze_gold"
                    android:layout_marginEnd="4dp" />
                <TextView
                    android:id="@+id/cardWhatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(00) 00000-0000"
                    android:textColor="@color/bronze_gold"
                    android:textSize="14sp"
                    android:layout_marginEnd="12dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_email"
                    android:tint="@color/bronze_gold"
                    android:layout_marginEnd="4dp" />
                <TextView
                    android:id="@+id/cardEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email@exemplo.com"
                    android:textColor="@color/bronze_gold"
                    android:textSize="14sp"
                    android:layout_marginEnd="12dp" />
            </LinearLayout>

            <!-- Endereço -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_location_on"
                    android:tint="@color/bronze_gold"
                    android:layout_marginEnd="4dp" />
                <TextView
                    android:id="@+id/cardAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endereço"
                    android:textColor="@color/bronze_gold"
                    android:textSize="14sp"
                    android:layout_marginEnd="12dp" />
            </LinearLayout>

            <!-- Idiomas -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_language"
                    android:tint="@color/bronze_gold"
                    android:layout_marginEnd="4dp" />
                <TextView
                    android:id="@+id/cardLanguages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Português"
                    android:textColor="@color/bronze_gold"
                    android:textSize="14sp"
                    android:layout_marginEnd="12dp" />
            </LinearLayout>

            <!-- Redes sociais -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_share"
                    android:tint="@color/bronze_gold"
                    android:layout_marginEnd="4dp" />
                <TextView
                    android:id="@+id/cardSocial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Redes sociais"
                    android:textColor="@color/bronze_gold"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Descrição extra -->
            <TextView
                android:id="@+id/cardDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição do atendimento"
                android:textColor="@color/bronze_gold"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 