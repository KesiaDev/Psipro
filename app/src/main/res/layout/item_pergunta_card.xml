<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@color/card_background"
    android:elevation="2dp"
    android:radius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/txtPerguntaTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pergunta"
                android:textColor="@color/bronze_gold"
                android:textSize="15sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/btnEditarPergunta"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_edit"
                android:tint="@color/bronze_gold"
                android:contentDescription="Editar" />
            <ImageView
                android:id="@+id/btnDeletarPergunta"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:tint="@color/red"
                android:contentDescription="Deletar" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtResposta"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Resposta..."
            android:background="@color/surface_black"
            android:textColor="@color/white"
            android:textColorHint="@color/text_secondary"
            android:padding="10dp"
            android:textSize="14sp"
            android:gravity="top|start"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:inputType="textMultiLine"
            android:maxLines="5" />

    </LinearLayout>
</androidx.cardview.widget.CardView> 