<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Psipro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/bronze_gold</item>
        <item name="colorPrimaryVariant">@color/bronze_gold_dark</item>
        <item name="colorOnPrimary">@color/text_white</item>
        <item name="colorSecondary">@color/secondary_bronze</item>
        <item name="colorSecondaryVariant">@color/bronze_gold_dark</item>
        <item name="colorOnSecondary">@color/text_white</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_white</item>
        <item name="colorOnSurface">@color/text_black</item>
        <item name="textColorPrimary">@color/text_black</item>
        <item name="textColorSecondary">@color/text_gray</item>
        <item name="colorBackground">@color/background_light</item>
        <item name="colorError">@color/error_red</item>
        <item name="android:statusBarColor">@color/bronze_gold</item>
        <item name="android:navigationBarColor">@color/bronze_gold</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="colorOutline">@color/bronze_gold</item>
        <item name="dividerColor">@color/dividerColor</item>
    </style>

    <style name="Theme.Psipro.NoActionBar" parent="Theme.Psipro">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>