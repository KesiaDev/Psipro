<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DrawerMenuBold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Login Button Style -->
    <style name="LoginButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Google Sign In Button Style -->
    <style name="GoogleSignInButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/bronze_gold</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">32dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!-- Login Input Style -->
    <style name="LoginInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">@color/bronze_gold</item>
        <item name="hintTextColor">@color/text_gray</item>
        <item name="android:background">@color/surface_white</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="boxBackgroundColor">@color/surface_white</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">false</item>
    </style>

    <style name="LoginInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:background">@color/surface_white</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Search Input Layout Style -->
    <style name="SearchInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/bronze_gold</item>
        <item name="boxStrokeColor">@color/bronze_gold_dark</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:elevation">2dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
    </style>

    <!-- Estilo para CardView de Evento na Agenda -->
    <style name="AgendaEventCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardBackgroundColor">@color/agenda_event_bg</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Estilo para ToggleButton/ChipGroup da Agenda -->
    <style name="AgendaToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/agenda_toggle_text</item>
        <item name="android:backgroundTint">@color/agenda_toggle_unselected</item>
        <item name="strokeColor">@color/bronze_gold</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="AgendaToggleButton.Selected">
        <item name="android:backgroundTint">@color/agenda_toggle_selected</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeColor">@color/bronze_gold</item>
    </style>

    <!-- Estilo para FAB da Agenda -->
    <style name="AgendaFAB" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/agenda_fab</item>
        <item name="rippleColor">@color/agenda_fab_ripple</item>
        <item name="elevation">4dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <!-- Estilo para linhas divisÃ³rias -->
    <style name="AgendaDivider">
        <item name="android:background">@color/agenda_divider</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialAlertDialog.Rounded</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.TitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.BodyText</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.Button.Negative</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialAlertDialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialAlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/bronze_gold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialAlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/bronze_gold</item>
    </style>

    <style name="MaterialAlertDialog.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/bronze_gold</item>
        <item name="rippleColor">@color/bronze_gold</item>
    </style>

    <style name="MaterialAlertDialog.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/bronze_gold</item>
        <item name="rippleColor">@color/bronze_gold</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.Dialog" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/bronze_gold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/rounded_button_bronze</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources> 